---
notPage:
- "/feed/index.xml"
origin: "/"
---

<?xml version='1.0' encoding='utf-8'?>
<rss version='2.0' xml:base='{{page.url}}' xmlns:dc='http://purl.org/dc/elements/1.1/'>
  <channel>
    <title>{{ site.title }}</title>
    <link>{{ site.baseurl }}</link>
    <description>{{ site.description }}</description>
    <language>en</language> 
    {% for post in site.posts limit:1000 %} 
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ site.baseurl }}{{ post.url }}</link>
        <description>{{ post.content | markdownify | xml_escape }}</description>
        <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
        <dc:creator>SITE NAME</dc:creator>
        <guid isPermaLink="true">{{ site.baseurl }}{{ post.url }}</guid>
      </item> 
    {% endfor %} 
  </channel>
</rss>